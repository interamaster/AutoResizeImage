<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/bubble_background"
        android:orientation="vertical"
     tools:context="com.mio.jrdv.autoresizeimage.MainActivity">


    <TextView
        android:id="@+id/textViewinfo"
        android:text="@string/info0"
        android:layout_marginTop="10dp"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView1"
        android:text="@string/info"
        android:layout_below="@+id/textViewinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonsalir"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="READY"
        android:layout_centerInParent="true"
        android:onClick="Salir"
        android:layout_alignParentBottom="true" />

    <Spinner

        android:layout_below="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spApsQueAbrenGaleria"
        android:prompt="@string/business_prompt">
                                        
    </Spinner>

    <TextView
        android:id="@+id/textView2"
        android:text="@string/info1"
        android:layout_below="@+id/spApsQueAbrenGaleria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp" />











</RelativeLayout>
